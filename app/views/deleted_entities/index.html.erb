<p id="notice"><%= notice %></p>

<center><h1>Deleted Entities</h1></center>

<table class='table table-striped'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Name</th>
      <th scope='col'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @deleted_entities.each_with_index do |entity, index| %>
      <tr>
        <td scope='row'><%= index + 1 %></td>
        <td>
          <%= Domain::Entity.new(entity.data[:uid]).load("Domain::Entity$#{entity.data[:uid]}").name %>
        </td>
        <td><%= link_to 'Show', deleted_entity_path(entity.data[:uid]), class: "btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
